<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>

        <%= form_with url:book_path(@book.id),model:@book ,local: true do |form|  %>
        <% if @book.errors.any? %>
        <div class="alert">
          <h3 style="color:red;"><%= @book.errors.count %>errors prohibited this obj from being saved:<br></h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li style="color:red; margin-bottom: 1rem;"><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-group">  
          <%= form.label :title %>
          <%= form.text_field :title ,value: @book.title ,class: "form-control book_title" %>
        </div>

        <div class="form-group">
          <%= form.label :Opinion %>
          <%= form.text_area :body ,value: @book.body ,class:"form-control book_body"%>
        </div>

        <div class="form-group">
          <%= form.submit class:"btn btn-success" %>
        </div>
        <% end %>
        <%= link_to "Show",book_path(@book.id) %> |
        <%= link_to 'Back', "/books" %>

      </div>
    </div>
  </div>
</main>

