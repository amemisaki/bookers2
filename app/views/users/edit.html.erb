<main>
  <% if @user.errors.any? %>
  <div class="alert">
    <h3 style="color:red;"><%= @user.errors.count %>errors prohibited this obj from being saved:<br></h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li style="color:red;"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with url:user_path(@user.id),model:@user ,local: true do |form|  %>
        <div class="form-group"> 
          <%= form.label :name %>
          <%= form.text_field :name ,class:'form-control',value: @user.name%>
        </div>
        <div class="form-group">
          <%= form.label :image %>
          <%= form.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= form.label :introduction %>
          <%= form.text_area :introduction ,class:'form-control',value: @user.introduction%>
        </div>
        <div class="form-group">
          <%= form.submit class:"btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>